<?xml version="1.0" encoding="ISO-8859-1"?>

<!DOCTYPE web-app
PUBLIC "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN"
"http://java.sun.com/j2ee/dtds/web-app_2_3.dtd">

<web-app>

	<display-name>
      Group Project - Servlets 
    </display-name>
    <description>
      Group Project - Various Servlets 
    </description>
    
    
    <servlet>
          <servlet-name>LoadBalancer</servlet-name>
          <servlet-class>org.gp.server1.LoadBalancer</servlet-class>
    </servlet>
    
    <servlet>
          <servlet-name>Gateway</servlet-name>
          <servlet-class>org.gp.server2.Gateway</servlet-class>
    </servlet>
    
     <servlet>
          <servlet-name>StatsTracker</servlet-name>
          <servlet-class>org.gp.server1.StatsTracker</servlet-class>
    </servlet>
    
    
    <servlet-mapping>
       <servlet-name>LoadBalancer</servlet-name>
       <url-pattern>/LoadBalancer</url-pattern>
    </servlet-mapping>
    
     <servlet-mapping>
       <servlet-name>Gateway</servlet-name>
       <url-pattern>/Gateway</url-pattern>
    </servlet-mapping>
    
    <servlet-mapping>
       <servlet-name>StatsTracker</servlet-name>
       <url-pattern>/StatsTracker</url-pattern>
    </servlet-mapping>
    
    <!-- 
    <welcome-file-list> 
        <welcome-file>SearchEngines.html</welcome-file>
    </welcome-file-list>
    -->     
</web-app>